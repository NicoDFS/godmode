{
  "name": "@xgm/godmode",
  "version": "0.0.8",
  "description": "Test smart contracts in GodMode",
  "main": "gm.js",
  "files": [
    "/build",
    "/contracts",
    "/gmContractsInfo",
    "/gm.js",
    "/LICENSE",
    "/README.md",
    "/truffle-config.js"
  ],
  "scripts": {
    "clean": "rm -R node_modules",
    "test": "npm run test-contracts && npm run test-core",
    "test-contracts": "truffle test ./test/contracts/",
    "test-core": "mocha \"./test/core/*\" --recursive",
    "preinstall": "truffle compile",
    "release": "dotenv release-it -- --ci --only-version --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/xGodMode/godmode.git"
  },
  "keywords": [
    "godmode",
    "ethereum",
    "solidity",
    "test",
    "testing",
    "simluate"
  ],
  "author": "Martinet Lee",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xGodMode/godmode/issues"
  },
  "homepage": "https://github.com/xGodMode/godmode#readme",
  "dependencies": {
    "@makerdao/dai": "^0.31.4",
    "promise": "^8.1.0",
    "web3": "^1.2.7",
    "websocket-as-promised": "^1.0.1",
    "ws": "^7.3.0"
  },
  "peerDependencies": {
    "truffle": "5.x"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "dotenv-cli": "^4.0.0",
    "husky": "^4.3.0",
    "mocha": "^8.1.3",
    "prettier": "2.1.2",
    "pretty-quick": "^3.0.2",
    "release-it": "*"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "release-it": {
    "git": {
      "commitMessage": "release: v${version}"
    },
    "github": {
      "release": true
    }
  }
}
